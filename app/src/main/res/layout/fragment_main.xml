<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context=".view.ui.activity.MainActivity"
              android:gravity="center"
              android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_main_profile_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:background="@color/accent"/>

        <TextView
            android:id="@+id/fragment_main_username_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_vertical"
            tools:text="levibostian"/>
    </LinearLayout>

    <com.levibostian.androidblanky.view.ui.widget.LoadingEmptyLayout
        android:id="@+id/fragment_main_loading_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        android:background="@android:color/white"
        custom:loadEmptyView_loadingText="@string/loading_repos"
        custom:loadEmptyView_emptyText="@string/user_no_repos"
        custom:loadEmptyView_lightDarkView="dark"
        android:padding="8dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_main_repos_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.levibostian.androidblanky.view.ui.widget.LoadingEmptyLayout>

</LinearLayout>
